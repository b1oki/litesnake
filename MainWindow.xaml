<Window x:Class="LiteSnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LiteSnake" KeyDown="Window_KeyDown"
        Width="295" Height="320" ResizeMode="NoResize" Closing="Window_Closing" Icon="Icon.ico">
    <Grid Background="Black">
        <Canvas Name="canvaz" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Canvas>
        <Label Name="lbPause" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="42" Foreground="Red" FontWeight="Bold" Visibility="Hidden"></Label>
        <Label Foreground="White" Margin="5,5" FontWeight="Bold">Score:</Label>
        <Label Foreground="White" Name="lbScore" Margin="10,20" FontWeight="Bold">0</Label>
        <Label Foreground="White" Margin="5,35" FontWeight="Bold">Speed</Label>
        <Label Foreground="White" Name="lbSpeed" Margin="10,50" FontWeight="Bold">0</Label>
    </Grid>
</Window>
